{
  "name": "UltimateTransfert",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"pnpm:start-server\" \"pnpm:start-client\"",
    "start-server": "cd server && pnpm run dev",
    "start-client": "cd client && pnpm run dev",
    "build": "cd server && pnpm run build && cd ../client && pnpm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.1"
  }
}
