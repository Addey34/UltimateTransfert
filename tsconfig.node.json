{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src/server",
    "composite": true,
    "noEmit": false
  },
  "include": ["src/server/**/*.ts", "vite.config.ts", "src/types/**/*"],
  "exclude": ["node_modules"]
}
